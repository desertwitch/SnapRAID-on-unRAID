<script type="text/javascript">
function checkCronSettings() {
    if ($("#CRON").val() === "weekly") {
        $("#CRONDOWSETTING).show();
        $("#CRONDOMSETTING).hide();
    } else if ($("#CRON").val() === "monthly") {
        $("#CRONDOWSETTING).hide();
        $("#CRONDOMSETTING).show();
    } else {
        $("#CRONDOWSETTING).hide();
        $("#CRONDOMSETTING).hide();
    }
}
$(function(){
    $('#btnApply').click(function(){
        $('#dwsnap-settings').submit();
    });
    $("#CRON").change(checkCronSettings);
    checkCronSettings();
});
</script>
    
